<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nyaa_Streamer.TrendingAnimePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" IconImageSource="refresh.png" Clicked="OnRefreshClicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="10">
        <Label Text="Trending Anime" FontSize="24" FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding TrendingAnimeList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Image Source="{Binding ImageUrl}" HeightRequest="150" />
                        <Label Text="{Binding Title}" FontSize="18" />
                        <Button Text="Watch/Download" Clicked="OnWatchDownloadClicked" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
