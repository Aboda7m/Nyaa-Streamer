<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nyaa_Streamer.TorrentManagerPage">

    <Grid>
        <!-- Background Image -->
        <Grid>
            <Image
            x:Name="backgroundImage"
            Source="backgroung.jpg"
            Aspect="AspectFill"
            HorizontalOptions="Start"/>
        </Grid>
        <ScrollView>
            <StackLayout Padding="20">
        <!-- ListView for selecting torrents -->
        <ListView x:Name="TorrentsListView"
                  SelectionMode="Single"
                  ItemSelected="OnTorrentSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Button to start streaming -->
        <Button x:Name="StreamButton"
                Text="Start Stream"
                IsEnabled="False"
                Clicked="OnStreamButtonClicked" />
    </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
