<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nyaa_Streamer.MenuPopUpPage"
             Title="Menu">


    <!-- Background Image -->
    <Grid>
        <Image
                x:Name="backgroundImage"
                Source="tier.png"
                Aspect="AspectFill"
                HorizontalOptions="Start"/>
   
    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
        <!-- Menu Options -->
        <Button Text="Clear Downloads" Clicked="OnOption1Clicked" />
        <Button Text="Open Downloads Folder" Clicked="OnOption2Clicked" />
        <Button Text="Close" Clicked="OnCloseClicked" />
    </VerticalStackLayout>
    </Grid>
</ContentPage>
