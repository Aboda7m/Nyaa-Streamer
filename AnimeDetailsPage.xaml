<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeLibraryApp.AnimeDetailsPage"
             Title="{Binding Title}">
    <StackLayout Padding="10">
        <!-- Anime Image -->
        <Image Source="{Binding ImageUrl}" HeightRequest="200" Aspect="AspectFit"/>

        <!-- Anime Title -->
        <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10"/>

        <!-- Anime Synopsis -->
        <Label Text="Synopsis:" FontAttributes="Bold"/>
        <Label Text="{Binding Synopsis}" />

        <!-- Other Details -->
        <Label Text="Score:" FontAttributes="Bold" Margin="0,10,0,0"/>
        <Label Text="{Binding Score}"/>

        <Label Text="Episodes:" FontAttributes="Bold"/>
        <Label Text="{Binding Episodes}"/>

        <!-- Nyaa.si Search Button -->
        <Button Text="Search on Nyaa.si" Clicked="OnNyaaSearchClicked"/>
    </StackLayout>
    
</ContentPage>
