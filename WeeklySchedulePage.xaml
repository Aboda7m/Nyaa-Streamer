<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Nyaa_Streamer.WeeklySchedulePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Nyaa_Streamer"
    Title="Weekly Schedule"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Sunday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.SundayPage}" />
        </Tab>
        <Tab Title="Monday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.MondayPage}" />
        </Tab>
        <Tab Title="Tuesday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.TuesdayPage}" />
        </Tab>
        <Tab Title="Wednesday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.WednesdayPage}" />
        </Tab>
        <Tab Title="Thursday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.ThursdayPage}" />
        </Tab>
        <Tab Title="Friday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.FridayPage}" />
        </Tab>
        <Tab Title="Saturday">
            <ShellContent ContentTemplate="{DataTemplate local:Weekly.SaturdayPage}" />
        </Tab>
    </TabBar>
</Shell>
