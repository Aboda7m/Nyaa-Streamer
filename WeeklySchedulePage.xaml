<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Nyaa_Streamer.WeeklySchedulePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Nyaa_Streamer.Weekly"
    Title="Weekly Schedule">

    <!-- Single Tab with multiple ShellContent for top tabs -->
    <TabBar>
        <Tab Title="Anime Schedule">
            <ShellContent Title="Sunday" ContentTemplate="{DataTemplate local:SundayPage}" />
            <ShellContent Title="Monday" ContentTemplate="{DataTemplate local:MondayPage}" />
            <ShellContent Title="Tuesday" ContentTemplate="{DataTemplate local:TuesdayPage}" />
            <ShellContent Title="Wednesday" ContentTemplate="{DataTemplate local:WednesdayPage}" />
            <ShellContent Title="Thursday" ContentTemplate="{DataTemplate local:ThursdayPage}" />
            <ShellContent Title="Friday" ContentTemplate="{DataTemplate local:FridayPage}" />
            <ShellContent Title="Saturday" ContentTemplate="{DataTemplate local:SaturdayPage}" />
        </Tab>
    </TabBar>
</Shell>
